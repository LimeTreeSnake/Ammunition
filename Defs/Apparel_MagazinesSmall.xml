<Defs>
	<!--==================== Small ======================== -->
	<ThingDef ParentName="PackBase">
		<defName>Apparel_AmmoPackPrimitiveSmall</defName>
		<label>small primitive pack</label>
		<description>A small pack for carrying primitive ammunition. It has enough space for 20 ammo.</description>    
		<graphicData>
			<texPath>MagPrimitive/AmmoPackPrimitiveSmall</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<techLevel>Neolithic</techLevel>
		<statBases>
			<Mass>2</Mass>
			<WorkToMake>1000</WorkToMake>
			<Flammability>0.6</Flammability>
			<EquipDelay>2</EquipDelay>
		</statBases>		 
		<costStuffCount>15</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>   
		<tradeability>All</tradeability>
		<thingCategories>
			<li>AmmoPacks</li>
		</thingCategories>		
		<apparel>
			<bodyPartGroups>
				<li>Legs</li>
			</bodyPartGroups>
			<layers>
				<li>Pack</li>
			</layers>
			<tags>
				<li>Neolithic</li>
			</tags>
		</apparel>
		<recipeMaker>
			<recipeUsers>
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
				<li>CraftingSpot</li>
			</recipeUsers>
		</recipeMaker>  
		<comps>			
			<li Class="Ammunition.Comps.CompProps_Magazine">
				<AmmoCapacity>20</AmmoCapacity>
				<AmmoDef>AmmoPrimitive</AmmoDef>
				<Icon>MagPrimitive/AmmoPackPrimitiveSmall</Icon>
			</li>
		</comps>
	</ThingDef>

