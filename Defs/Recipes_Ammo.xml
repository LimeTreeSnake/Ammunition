<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<RecipeDef>
		<defName>Make_AmmoPrimitive</defName>
		<label>make primitive ammo</label>
		<description>Make primitive ammo by combining textiles and some raw resources.</description>
		<jobString>Making primitive ammo.</jobString>
		<workAmount>800</workAmount>
		<workSkill>Crafting</workSkill>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<effectWorking>Smith</effectWorking>
		<soundWorking>Recipe_Smith</soundWorking>
		<recipeUsers>
			<li>CraftingSpot</li>
			<li>ElectricSmithy</li>
			<li>FueledSmithy</li>
		</recipeUsers>
		<allowMixingIngredients>true</allowMixingIngredients>
		<skillRequirements>
			<Crafting>2</Crafting>
		</skillRequirements>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>StoneBlocks</li>
					</categories>
					<thingDefs>
						<li>Steel</li>
						<li>WoodLog</li>
					</thingDefs>
				</filter>
				<count>25</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>Textiles</li>
					</categories>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>StoneBlocks</li>
				<li>Textiles</li>
			</categories>
			<thingDefs>
				<li>Steel</li>
				<li>WoodLog</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<AmmoPrimitive>75</AmmoPrimitive>
		</products>
	</RecipeDef>

	<RecipeDef>
		<defName>Make_AmmoIndustrial</defName>
